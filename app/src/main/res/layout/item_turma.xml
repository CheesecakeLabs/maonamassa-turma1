<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/fundoDaCelula"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/turmaImageView"
        android:layout_width="60dp"
        android:layout_height="60dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/nomeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome da Turma"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/localTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nomeTextView"
            android:text="Local da Aula"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/totalTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/localTextView"
            android:text="Total de alunos"
            android:textSize="18sp"/>

    </RelativeLayout>

</LinearLayout>
